#!/usr/bin/env php
<?php
chdir(__DIR__ . '/../demo');
$port = 8080;
$found = false;
while(!$found){
	$foundCount = (int) trim(shell_exec("netstat -anp tcp | grep '\.{$port}\s' | wc -l"));
	if($foundCount === 1){
		++$port;
	}else{
		$found = true;
	}
}
echo "opening demo server on localhost:{$port}\n";
passthru("php -S localhost:{$port}");
